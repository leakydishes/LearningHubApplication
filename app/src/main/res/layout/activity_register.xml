<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".activities.RegisterActivity">

    <!--Layout for user into-->
    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <!--title header-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/edit_text_top"
            android:textStyle="bold"
            android:padding="15dp"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/cadet_blue"
            android:textSize="20dp" />

        <!--Add Image-->
        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:src="@drawable/userphoto"
            android:textAlignment="center"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:contentDescription="profile image"
            android:background="@drawable/edit_text_end"
            android:alpha="0.8"
            android:padding="20dp"/>

        <!-- Get image for profile-->
        <Button
            android:id="@+id/btnGetImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:alpha="0.8"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:clickable="true"
            style="?android:attr/borderlessButtonStyle"
            android:text="Add image"
            android:padding="15dp" />

        <!--user name-->
        <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_top"
            android:alpha="0.8"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <!--user User name-->
        <EditText
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle2"
            android:alpha="0.8"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="15dp" />

        <!--user password-->
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/edit_text_middle2"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"/>

        <!--user password confirm-->
        <EditText
            android:id="@+id/cfm_Password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/edit_text_middle2"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="15dp"/>

        <!--user phone-->
        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@drawable/edit_text_end"
            android:hint="Phone Number"
            android:maxLength="10"
            android:inputType="phone"
            android:padding="15dp"/>

        <!--Buton sign up-->
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="SIGN UP"
            android:backgroundTint="@color/cadet_blue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <!--Button sign in-->
        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="10dp"
            android:text="Have an Account?  Sign in"
            android:textAllCaps="true"
            android:textSize="12sp"
            style="?android:attr/borderlessButtonStyle"
            android:clickable="true"
            android:textStyle="bold"
            android:textColor="@color/cadet_blue"
            android:fontFamily="sans-serif"
            android:focusable="true" />
    </LinearLayout>
</RelativeLayout>